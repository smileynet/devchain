# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[{*.md,*.txt}]
trim_trailing_whitespace = false
max_line_length = 120

